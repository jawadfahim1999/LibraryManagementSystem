<%= render 'shared/navbar' %>

<div class="container mt-4">
  <div class="jumbotron">
    <h1 class="display-4">Library Patrons</h1>
    <%= link_to 'Add New Patron', new_patron_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>ID Number</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @patrons.each do |patron| %>
        <tr>
          <td><%= patron.name %></td>
          <td><%= patron.id_number %></td>
          <td>
            <%= link_to 'Show', patron %>
            <%= link_to 'Edit', edit_patron_path(patron) %>
            <%= link_to 'Destroy', patron, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
