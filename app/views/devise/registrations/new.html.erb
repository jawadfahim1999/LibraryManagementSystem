<% resource_class.new %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header text-center bg-success text-white">
          <h4>Sign up</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: 'form-label' %>
              <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, class: 'form-label' %>
              <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :user_type, class: 'form-label' %>
              <%= f.select :user_type, options_for_select(User.user_types.keys), {}, class: 'form-control', required: true %>
            </div>

            <div class="text-center">
              <%= f.submit 'Sign up', class: 'btn btn-success' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <p class="mb-0">Already have an account? <%= link_to 'Log in', new_user_session_path %></p>
        </div>
      </div>
    </div>
  </div>
</div>
